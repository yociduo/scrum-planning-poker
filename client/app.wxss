.top-stick {
  top: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  z-index: 999;
}

button[type=primary] {
  background-color: #0678C1;
}

button[type="primary"].button-hover,
button[type="primary"]:not([disabled]):active {
  background-color: #075E96;
}

button[type=primary][loading],
button[type=primary][disabled] {
  background-color: #7cb5da;
}
